---
layout: default.hbs
---
{{> post-background}}
<div class="post-background"></div>
<header class="post-header">
  <div class="post-header-inner">
    <h1 class="post-title">{{title}}</h1>
    <p class="post-byline"><span class="post-place">{{place}}</span> <span class="post-byline-separator">&#8226;</span> <span class="post-date">{{date}}</span></p>
  </div>
</header>
<div class="post-content">
  <div class="post-body">
    <p class="post-intro">{{{intro}}}</p>
    {{#markdown}}{{ body }}{{/markdown}}
  </div>
</div>
